<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block stylesheet %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <title>{% block title %}Sortir.com - Se connecter{% endblock %}</title>
</head>
<body>
<header>
    <img src="{{ asset("images/logoSite.jpg") }}" alt="Logo du site">

    {% block header %}
    {% endblock %}
</header>

<h1>Bienvenue !</h1>
{% block main %}

{% endblock %}

{# afficher les messages flash #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% block script %}
{% endblock %}

</body>
</html>